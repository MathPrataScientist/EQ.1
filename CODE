from sympy import symbols, Eq, solve
from sympy.parsing.sympy_parser import parse_expr, standard_transformations, implicit_multiplication_application

print ('EQ.1')
print("Exemplos que este programa entende:")
print("  2x+3=7")
print("  3(x-4)=12")
print("  5x-9=3x+11")
print("  (x/2)+7=20")
print("===============================================")
transform = standard_transformations + (implicit_multiplication_application,)

x = symbols('x')

entrada = input("Digite a equação: ")

try:
    esquerdo, direito = entrada.split("=")

    eq_esquerdo = parse_expr(esquerdo, transformations=transform)
    eq_direito = parse_expr(direito, transformations=transform)

    equacao = Eq(eq_esquerdo, eq_direito)
    print("\nEquação interpretada:", equacao)

    solucao = solve(equacao, x)
    print("\nSolução encontrada:")
    print("x =", solucao[0])

except Exception as erro:
    print("Erro ao interpretar a equação!", erro)
